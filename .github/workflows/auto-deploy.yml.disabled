name: Web3 Dashboard Auto-Deploy

on:
  push:
    branches: [main]
  schedule:
    # æ¯5åˆ†é’Ÿè‡ªåŠ¨åˆ·æ–°éƒ¨ç½²
    - cron: '*/5 * * * *'
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: pages
  cancel-in-progress: false

jobs:
  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Pages
        uses: actions/configure-pages@v4

      - name: Sync data files
        run: |
          if [ -d "/root/.openclaw/workspace/web3-master/data" ]; then
            cp /root/.openclaw/workspace/web3-master/data/*.json public/ 2>/dev/null || echo "ä½¿ç”¨å†…ç½®æ•°æ®"
          fi

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: 'public'

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
        if: github.event_name == 'push' || github.event_name == 'workflow_dispatch'

      - name: Info
        if: github.event_name == 'schedule'
        run: |
          echo "âœ… è‡ªåŠ¨åˆ·æ–°å®Œæˆ: $(date)"
          echo "ğŸ“Š æ•°æ®æº: /root/.openclaw/workspace/web3-master/data/"
